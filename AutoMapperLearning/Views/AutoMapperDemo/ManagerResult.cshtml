@model AutoMapperLearning.Models.DTOs.ManagerDTO

@{
    ViewData["Title"] = ViewBag.Title;
}

<div class="container mt-5">
    <h2>@ViewBag.Title</h2>
    
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">@ViewBag.Title</li>
        </ol>
    </nav>

    <div class="alert alert-info">
        <strong>‚ÑπÔ∏è Description:</strong> @ViewBag.Description
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>Manager Information</h4>
        </div>
        <div class="card-body">
            <h5>Base Employee Properties</h5>
            <table class="table table-bordered mb-4">
                <tr>
                    <th width="200">Property</th>
                    <th>Value</th>
                </tr>
                <tr>
                    <td><strong>Id</strong></td>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <td><strong>Name</strong></td>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <td><strong>Email</strong></td>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <td><strong>Department</strong></td>
                    <td>@Model.Department</td>
                </tr>
            </table>

            <h5>Manager-Specific Properties</h5>
            <table class="table table-bordered">
                <tr>
                    <th width="200">Property</th>
                    <th>Value</th>
                </tr>
                <tr>
                    <td><strong>Team Size</strong></td>
                    <td>@Model.TeamSize people</td>
                </tr>
                <tr>
                    <td><strong>Office Location</strong></td>
                    <td>@Model.OfficeLocation</td>
                </tr>
            </table>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header bg-secondary text-white">
            <h5>üèóÔ∏è Inheritance Mapping Explained</h5>
        </div>
        <div class="card-body">
            <pre class="bg-light p-3"><code>// Domain Models
public class Employee
{
    public int Id { get; set; }
    public string Name { get; set; }
    // ... other properties
}

public class Manager : Employee
{
    public int TeamSize { get; set; }
    public string OfficeLocation { get; set; }
}

// DTOs with same inheritance
public class EmployeeDTO { ... }
public class ManagerDTO : EmployeeDTO { ... }

// Mapping configuration
CreateMap&lt;Employee, EmployeeDTO&gt;();
CreateMap&lt;Manager, ManagerDTO&gt;()
    .IncludeBase&lt;Employee, EmployeeDTO&gt;(); // Include base class mappings</code></pre>
            <p class="mt-3"><strong>Result:</strong> Manager is mapped to ManagerDTO with all base Employee properties included automatically!</p>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-primary">‚Üê Back to Examples</a>
    </div>
</div>
